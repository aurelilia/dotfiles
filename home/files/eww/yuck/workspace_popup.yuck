(defwindow workspace-popup-0
    :monitor 0
    :stacking "fg"
    :exclusive false
    (workspace))
(defwindow workspace-popup-1
    :monitor 1
    :stacking "fg"
    :exclusive false
    (workspace))

(defwidget workspace []
  (box :hexpand true
       :vexpand true
       :class "workspace-box"
    (for space in workspaces
      (label :text "${space['name']}"
             :width 175
             :class "workspace-text ${space['focused'] ? "active" : "inactive"}"))))
