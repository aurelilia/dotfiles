(defwindow workspace-popup [monitor]
    :monitor monitor
    :stacking "fg"
    :exclusive false
    (workspace))

(defwidget workspace []
  (box :hexpand true
       :vexpand true
       :class "workspace-box"
    (for space in workspaces
      (label :text "${space['name']}"
             :width 175
             :class "workspace-text ${space['focused'] ? "active" : "inactive"}"))))
