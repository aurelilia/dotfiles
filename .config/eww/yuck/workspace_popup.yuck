(defwindow workspace-popup
    :monitor 0
    :stacking "fg"
    :exclusive false
    (workspace))

(defwidget workspace []
  (box :hexpand true
       :vexpand true
       :class "workspace-box"
    (label :halign "center"
           :valign "center"
           :text workspace
           :class "workspace-text")))

(defpoll workspace :interval "1s"
    "sh ./scripts/get_workspace.sh")
